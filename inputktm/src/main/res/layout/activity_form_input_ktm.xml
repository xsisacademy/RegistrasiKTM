<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FormInputKTM"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Form Input KTM"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:layout_margin="10dp"/>

    <EditText
        android:id="@+id/inputNamaMahasiswa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nama Mahasiswa"
        android:layout_margin="10dp"/>

    <EditText
        android:id="@+id/inputAlamatMahasiswa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Alamat Mahasiswa"
        android:layout_margin="10dp"/>

    <EditText
        android:id="@+id/inputUsiaMahasiswa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Usia"
        android:maxLength="3"
        android:inputType="numberDecimal"
        android:layout_margin="10dp"/>

    <Button
        android:id="@+id/buttonDaftar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Daftar"
        android:layout_gravity="right"
        android:layout_margin="10dp"/>

</LinearLayout>